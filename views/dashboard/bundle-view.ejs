<div class="container">
    <div class="card mb-4 mt-3">
        <div class="card-body">
<h2 class="card-title text-center"><%= locals.bundle.Name %>
</h2>
<div class="card-subtitle text-muted">
<p>Bundle-Art: <%= type %>
</p>
<p>Bundle-Benutzer: <%= linkedUsers %>/<%= users %>
</p>
<% if (users !=1) { %>
    <% if (admin) { %>
        <p>Join Link:</p>
        <p>join.green-care.info/<%= id %></p>
        <p class="hide" id="copy">Hey, trete doch meinem Bundle bei join.green-care.info/<%= id %> der Token ist <%= token %></p>
        <p class="mb-1">Token:</p>
        <h3 id="p2" class="mb-3"><%= token %></h3>
        <button class="btn btn-success" onclick="copyToClipboard('#copy')">Einladung kopieren</button>
    <% } %>
<% } %>
<script>
    function copyToClipboard(element) {
  var $temp = $("<input>");
  $("body").append($temp);
  $temp.val($(element).text()).select();
  document.execCommand("copy");
  $temp.remove();
}
</script>
</div>
</div>
</div>
<p>Benutzer:</p>
<table class="table table-striped">
    <thead>
    </thead>
    <tbody>
        <tr class="bundleuser__list">
            <th scope="col">
                <%= locals.bundle.users[0].name %>
            </th>
            <th scope="col">
                <%= locals.bundle.users[0].email %>
            </th>    
            <% if (admin) { %>
                <th scope="col"></th>
            <% } %>
        </tr>
        <% for( let i=1; i < locals.bundle.users.length; i++ ) { %>
            <tr class="bundleuser__list">
                <td>
                    <%= locals.bundle.users[i].name %>
                </td>
                <td>
                    <%= locals.bundle.users[i].email %>
                </td>
                <% if (admin) { %>
                    <td>
                        <form action="/dashboard/bundle/user?_method=DELETE" method="POST">
                            <input name="id" type="hidden" value="<%= locals.bundle.users[i]._id %>">
                            <input name="Admin" type="hidden" value="<%= locals.adminID %>">
                            <button class="btn btn-danger cross-button" type="submit">
                                <i class="material-icons cross-icon">close</i></button>
                        </form>
                    </td>
                <% } %>
            </tr>
        <% } %>
    </tbody>
</table>
<span class="show-on-mobile text-muted">
    <% if (admin) { %>
    Zum bearbeiten der User benutze einen PC
    <% } %>
</span>
</div>